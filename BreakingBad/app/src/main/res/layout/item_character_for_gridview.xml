<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/character_infogrid_photo_imageview"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            tools:src="@mipmap/ic_bb_launcher"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/character_infogrid_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/character_img_rl"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:textSize="18sp"
            tools:text="Name" />

        <TextView
            android:id="@+id/character_infogrid_nickname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/character_img_rl"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"
            tools:text="Nickname" />

        <ImageView
            android:id="@+id/character_infogrid_already_seen_imageview"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/ic_green_eye_24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="top|end"
            android:visibility="gone"
            tools:visibility="visible"
            android:contentDescription="TODO" />
    </LinearLayout>
</androidx.cardview.widget.CardView>